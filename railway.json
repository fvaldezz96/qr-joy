{
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm install && npm run build",
    "nixpacksPlan": {
      "phases": {
        "setup": {
          "nixPkgs": [
            "nodejs-20_x"
          ]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "npx serve dist -s -l tcp://0.0.0.0:$PORT --no-port-switching",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}